#!/usr/bin/env bash
set -euo pipefail

SPIS_MEDIA_DIR="${UMBREL_ROOT}/data/storage/Photos"
DESIRED_OWNER="0:0"

if [[ ! -d "${SPIS_MEDIA_DIR}" ]]; then
  mkdir -p "${SPIS_MEDIA_DIR}"
fi

owner=$(stat -c "%u:%g" "${SPIS_MEDIA_DIR}")

if [[ "${owner}" != "${DESIRED_OWNER}" ]]; then
  chown -R "${DESIRED_OWNER}" "${SPIS_MEDIA_DIR}"
fi
