# Application Settings
APP_NAME=Pixelfed
APP_ENV=production
APP_KEY=base64:generate_a_new_key_here
APP_DEBUG=false
APP_URL=http://umbrel.local:9757
APP_DOMAIN=umbrel.local
ADMIN_DOMAIN=umbrel.local
SESSION_DOMAIN=.umbrel.local
APP_TIMEZONE=Europe/Bucharest

# Database Settings
DB_CONNECTION=pgsql
DB_HOST=pixelfed-db
DB_PORT=5432
DB_DATABASE=pixelfeddb
DB_USERNAME=pixelfeduser
DB_PASSWORD=your_secure_password

# Redis Settings
REDIS_HOST=pixelfed-redis
REDIS_PORT=6379
QUEUE_DRIVER=redis
CACHE_DRIVER=redis
SESSION_DRIVER=redis

# Mail Settings (Optional)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=no-reply@umbrel.local
MAIL_FROM_NAME="Pixelfed"

# Federation (Optional, if using ActivityPub)
ACTIVITY_PUB_ENABLED=true
ACTIVITY_PUB_PUBLIC_KEY=your_public_key
ACTIVITY_PUB_PRIVATE_KEY=your_private_key

# Horizon (for Worker)
HORIZON_PREFIX=pf

# Additional settings
FILESYSTEM_DRIVER=local
BROADCAST_DRIVER=log
LOG_CHANNEL=stack
CACHE_DRIVER=redis
QUEUE_CONNECTION=sync

# Memcached Settings (Optional, if using Memcached)
MEMCACHED_HOST=127.0.0.1
MEMCACHED_PORT=11211

# Broadcasting (Optional, configure if needed)
BROADCAST_DRIVER=log

# Misc Settings
SESSION_LIFETIME=120
QUEUE_CONNECTION=redis
CACHE_PREFIX=pf_

